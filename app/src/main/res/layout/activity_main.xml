<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303f9f"
    tools:context="com.example.inspiron.levelcontrol.MainActivity">

    <TextView
        android:id="@+id/qs1"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="103dp"
        android:background="@color/colorPrimary"
        android:text="Select the mode of control:"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/man"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qs1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:background="@drawable/rounded_btn"
        android:text="MANUAL"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="96dp" />

    <Button
        android:id="@+id/auto"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/man"
        android:layout_below="@+id/man"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_btn"
        android:text="AUTOMATIC"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="269dp"
        tools:layout_editor_absoluteY="96dp" />

    <TextView
        android:id="@+id/idSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:text="Set Level:"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/setVal"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/idSet"
        android:layout_alignStart="@+id/man"
        android:background="@android:color/background_light"
        android:backgroundTint="@android:color/background_light"
        android:textAlignment="center"
        android:inputType="number"/>

    <TextView
        android:id="@+id/maxH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

</RelativeLayout>
